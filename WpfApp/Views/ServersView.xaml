<UserControl x:Class="WpfApp.Views.ServersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="780" d:DesignWidth="1460">

    <DockPanel Background="White">
        
        <DockPanel DockPanel.Dock="Bottom" Height="650">
            <DataGrid x:Name="ServerList" DockPanel.Dock="Left" Width="749" Style="{StaticResource dataGrid}">
                <DataGrid.Columns>
                </DataGrid.Columns>
            </DataGrid>
            <Image Source="{StaticResource serverScreenBackground}" HorizontalAlignment="Right"/>
        </DockPanel>

        <Button x:Name="Logout" Style="{StaticResource logoutButton}" HorizontalAlignment="Right" VerticalAlignment="Center"/>

    </DockPanel>
</UserControl>
